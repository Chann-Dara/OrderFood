<!--            android:id="@+id/textView_repassword"-->
<!--            android:layout_below="@+id/editView_password"-->
<!--            android:textColor="#555555"-->
<!--            android:textSize="18sp"-->
<!--            android:padding="5dp"-->
<!--            android:layout_width="match_parent"-->
